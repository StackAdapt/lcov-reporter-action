{
  "name": "lcov-reporter-action",
  "version": "0.4.2",
  "description": "Comments a pull request with the lcov code coverage",
  "license": "MIT",
  "author": "Romeo Van Snick",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romeovs/lcov-reporter-action.git"
  },
  "keywords": [
    "actions",
    "pull-request",
    "comment",
    "message"
  ],
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --passWithNoTests --coverage",
    "local": "babel-node src/cli",
    "format": "prettier --write src/*.js src/**/*.js"
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^1.1.0",
    "encoding": "^0.1.13",
    "lcov-parse": "^1.0.0",
    "octokit-next": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.12.11",
    "@octokit-next/endpoint": "^2.7.0",
    "@octokit-next/request-error": "^2.7.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-jest": "^25.1.0",
    "core-js": "3",
    "jest": "^28.1.2",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.3",
    "rollup": "^1.32.1",
    "rollup-plugin-node-externals": "^2.1.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/*_test.js",
      "<rootDir>/src/**/*_test.js"
    ]
  },
  "prettier": {
    "semi": false,
    "useTabs": true,
    "trailingComma": "all"
  },
  "bugs": {
    "url": "https://github.com/romeovs/lcov-reporter-action/issues"
  },
  "homepage": "https://github.com/romeovs/lcov-reporter-action#readme"
}
